<ui:UiBinder
   xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
   xmlns:ui="urn:ui:com.google.gwt.uibinder">
   
    <ui:style>
		.anchor {
			margin: 30px 50px;
			font-size: 18px;
			color: darkblue;
			display: block;
		}

		.anchor:hover {
			color: orangered;
			text-decoration: none;      
		}

		.editor {
			margin: 20px 50px;
		}

<!-- 		.tab-panel {
			height: 100%;
			width: 100%;
			

		} -->
		
		.tab {
			margin: 10px 50px;
		}

    </ui:style>


	<gwt:HTMLPanel ui:field="infoPanel">
		<gwt:VerticalPanel ui:field="infoMapPanel"></gwt:VerticalPanel>
		<gwt:HorizontalPanel ui:field="shareLinks"></gwt:HorizontalPanel>
		<gwt:FlexTable ui:field="treeInfoTable" />
		<gwt:HorizontalPanel ui:field="editButtonsBar"></gwt:HorizontalPanel>
		<a href="http://data.vancouver.ca/datacatalogue/streetTreesAttributes.htm" target="_blank">More on Vancouver street tree attributes</a>
		<gwt:VerticalPanel ui:field="commentsPanel"></gwt:VerticalPanel>
		<gwt:Anchor ui:field="openEditorAnchor" styleName="{style.anchor}">Add
			Comment
		</gwt:Anchor>
		<gwt:VerticalPanel ui:field="commentsEditor"
			styleName="{style.editor}"></gwt:VerticalPanel>
	</gwt:HTMLPanel>
</ui:UiBinder>